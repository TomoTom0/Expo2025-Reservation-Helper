[tasks.rsync-src-to-win]
description = "Chrome拡張としてWindows側にsrcフォルダを同期"
run = "./rsync-src-to-win.sh"

[tasks.build-ts]
description = "TypeScriptテスト後にビルド実行"
run = [
    "npm run type-check",
    "npm run build"
]

[tasks.build-ts-rsync]
description = "TypeScriptビルド後にWindows同期実行"
run = [
    "npm run type-check",
    "npm run build", 
    "./rsync-src-to-win.sh"
]